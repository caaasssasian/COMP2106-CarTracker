<% include ../shared/header %>
    <h1>Manufacturer List</h1>
    <% if (user) { %>
    <a href="/makes/add">Add a New Manufacturer</a>
    <% } %>
    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Year</th>
            <% if (user) { %>
                <th>Actions</th>
            <% } %>
        </tr>
        <% for(let i = 0; i < makes.length; i++) { %>
            <tr>
                <td><%= makes[i].name %></td>
                <td><%= makes[i].country %></td>
                <td><%= makes[i].year %></td>
                <% if (user) { %>
                    <td class="col-4">
                        <a class="btn btn-info" href="/makes/edit/<%=makes[i]._id %>">Edit</a>
                        <a class="btn btn-danger" href="/makes/delete/<%=makes[i]._id %>" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                    </td>
                <% } %>
            </tr>
        <% } %>
    </table>
<% include ../shared/footer %>